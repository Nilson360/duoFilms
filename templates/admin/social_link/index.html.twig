{% extends 'admin/layout.html.twig' %}

{% block title %}Redes Sociais | DuoFilms{% endblock %}
{% block page_title %}Gerenciar Redes Sociais{% endblock %}

{% block content %}
    <div class="flex justify-between items-center mb-6">
        <p class="text-gray-400">Gerencie as redes sociais que serão exibidas no site.</p>

        <a href="{{ path('app_social_link_new') }}" class="bg-blue-600 hover:bg-blue-700 px-4 py-2 rounded-md flex items-center transition">
            <i class="fas fa-plus mr-2"></i>
            <span>Nova Rede Social</span>
        </a>
    </div>

    <div class="bg-gray-800 rounded-lg shadow-lg overflow-hidden">
        <table class="min-w-full divide-y divide-gray-700">
            <thead class="bg-gray-700">
            <tr>
                {% if 'displayOrder' is defined %}
                    <th scope="col" class="px-6 py-3 text-center text-xs font-medium text-gray-300 uppercase tracking-wider" style="width: 80px;">
                        Ordem
                    </th>
                {% endif %}
                <th scope="col" class="px-6 py-3 text-center text-xs font-medium text-gray-300 uppercase tracking-wider" style="width: 80px;">
                    Ícone
                </th>
                <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-300 uppercase tracking-wider">
                    Plataforma
                </th>
                <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-300 uppercase tracking-wider">
                    URL
                </th>
                <th scope="col" class="px-6 py-3 text-right text-xs font-medium text-gray-300 uppercase tracking-wider">
                    Ações
                </th>
            </tr>
            </thead>
            <tbody class="bg-gray-800 divide-y divide-gray-700">
            {% for socialLink in socialLinks %}
                <tr class="hover:bg-gray-700 transition">
                    {% if 'displayOrder' is defined %}
                        <td class="px-6 py-4 whitespace-nowrap text-center">
                            <span class="text-gray-300 font-mono bg-gray-700 px-2 py-1 rounded">{{ socialLink.displayOrder }}</span>
                        </td>
                    {% endif %}
                    <td class="px-6 py-4 whitespace-nowrap text-center">
                        <div class="w-10 h-10 rounded-full bg-gray-600 mx-auto flex items-center justify-center">
                            <i class="fab {{ socialLink.icon }} text-lg"></i>
                        </div>
                    </td>
                    <td class="px-6 py-4 whitespace-nowrap">
                        <div class="text-sm font-medium">{{ socialLink.platform }}</div>
                    </td>
                    <td class="px-6 py-4 whitespace-nowrap">
                        <a href="{{ socialLink.url }}" target="_blank" class="text-blue-400 hover:text-blue-300 text-sm truncate block max-w-xs">
                            {{ socialLink.url }}
                        </a>
                    </td>
                    <td class="px-6 py-4 whitespace-nowrap text-right text-sm font-medium">
                        <div class="flex justify-end space-x-3">
                            <a href="{{ path('app_social_link_edit', {id: socialLink.id}) }}" class="text-yellow-400 hover:text-yellow-300">
                                <i class="fas fa-edit"></i>
                            </a>
                            <a href="#" class="text-red-400 hover:text-red-300"
                               onclick="if(confirm('Tem certeza que deseja eliminar esta rede social?')) { document.getElementById('delete-form-{{ socialLink.id }}').submit(); } return false;">
                                <i class="fas fa-trash"></i>
                            </a>
                            <form id="delete-form-{{ socialLink.id }}" action="{{ path('app_social_link_delete', {id: socialLink.id}) }}" method="post" style="display: none;">
                                <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ socialLink.id) }}">
                            </form>
                        </div>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="5" class="px-6 py-10 text-center">
                        <i class="fas fa-share-alt text-4xl text-gray-600 mb-3"></i>
                        <p class="text-gray-400 mb-4">Nenhuma rede social encontrada</p>
                        <a href="{{ path('app_social_link_new') }}" class="bg-blue-600 hover:bg-blue-700 px-4 py-2 rounded-md inline-flex items-center transition">
                            <i class="fas fa-plus mr-2"></i>
                            <span>Adicionar primeira rede social</span>
                        </a>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>

    <div class="mt-8 bg-gray-800 rounded-lg shadow-lg p-6">
        <h3 class="text-lg font-medium mb-4">Sugestões de Redes Sociais</h3>

        <div class="grid grid-cols-1 md:grid-cols-4 gap-4">
            <div class="bg-gray-700 rounded-lg p-4 flex items-center">
                <div class="w-10 h-10 rounded-full bg-blue-600 flex items-center justify-center mr-3">
                    <i class="fab fa-facebook-f text-white"></i>
                </div>
                <div>
                    <p class="font-medium">Facebook</p>
                    <p class="text-sm text-gray-400">fa-facebook-f</p>
                </div>
            </div>

            <div class="bg-gray-700 rounded-lg p-4 flex items-center">
                <div class="w-10 h-10 rounded-full bg-gradient-to-r from-purple-600 to-red-600 flex items-center justify-center mr-3">
                    <i class="fab fa-instagram text-white"></i>
                </div>
                <div>
                    <p class="font-medium">Instagram</p>
                    <p class="text-sm text-gray-400">fa-instagram</p>
                </div>
            </div>

            <div class="bg-gray-700 rounded-lg p-4 flex items-center">
                <div class="w-10 h-10 rounded-full bg-red-600 flex items-center justify-center mr-3">
                    <i class="fab fa-youtube text-white"></i>
                </div>
                <div>
                    <p class="font-medium">YouTube</p>
                    <p class="text-sm text-gray-400">fa-youtube</p>
                </div>
            </div>

            <div class="bg-gray-700 rounded-lg p-4 flex items-center">
                <div class="w-10 h-10 rounded-full bg-green-600 flex items-center justify-center mr-3">
                    <i class="fab fa-whatsapp text-white"></i>
                </div>
                <div>
                    <p class="font-medium">WhatsApp</p>
                    <p class="text-sm text-gray-400">fa-whatsapp</p>
                </div>
            </div>
        </div>
    </div>
{% endblock %}