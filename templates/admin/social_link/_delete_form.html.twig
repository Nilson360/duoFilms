<form method="post" action="{{ path('app_social_link_delete', {'id': socialLink.id}) }}"
      onsubmit="return confirm('Tem certeza que deseja eliminar este link de rede social?');">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ socialLink.id) }}">
    <button type="submit" class="bg-red-600 hover:bg-red-700 px-4 py-2 rounded-md flex items-center transition">
        <i class="fas fa-trash mr-2"></i>
        <span>Eliminar</span>
    </button>
</form>