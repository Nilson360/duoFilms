{% extends 'admin/layout.html.twig' %}

{% block title %}Páginas | DuoFilms{% endblock %}
{% block page_title %}Gerenciar Páginas{% endblock %}

{% block content %}
    <div class="flex justify-between items-center mb-6">
        <div class="relative">
            <input type="text" id="searchInput" placeholder="Pesquisar..." class="bg-gray-700 border border-gray-600 rounded-md py-2 px-4 pl-10 w-64 focus:outline-none focus:ring-2 focus:ring-blue-500">
            <div class="absolute left-3 top-2.5">
                <i class="fas fa-search text-gray-400"></i>
            </div>
        </div>

        <a href="{{ path('app_page_new') }}" class="bg-blue-600 hover:bg-blue-700 px-4 py-2 rounded-md flex items-center transition">
            <i class="fas fa-plus mr-2"></i>
            <span>Nova Página</span>
        </a>
    </div>

    <div class="bg-gray-800 rounded-lg shadow-lg overflow-hidden">
        <table class="min-w-full divide-y divide-gray-700">
            <thead class="bg-gray-700">
            <tr>
                <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-300 uppercase tracking-wider">
                    Título
                </th>
                <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-300 uppercase tracking-wider">
                    Slug
                </th>
                <th scope="col" class="px-6 py-3 text-center text-xs font-medium text-gray-300 uppercase tracking-wider">
                    Status
                </th>
                <th scope="col" class="px-6 py-3 text-center text-xs font-medium text-gray-300 uppercase tracking-wider">
                    No Rodapé
                </th>
                <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-300 uppercase tracking-wider">
                    Atualizado
                </th>
                <th scope="col" class="px-6 py-3 text-right text-xs font-medium text-gray-300 uppercase tracking-wider">
                    Ações
                </th>
            </tr>
            </thead>
            <tbody class="bg-gray-800 divide-y divide-gray-700" id="pagesTable">
            {% for page in pages %}
                <tr class="hover:bg-gray-700 transition">
                    <td class="px-6 py-4 whitespace-nowrap">
                        <div class="text-sm font-medium page-title">{{ page.title }}</div>
                    </td>
                    <td class="px-6 py-4 whitespace-nowrap">
                        <div class="text-sm text-gray-400 font-mono">/{{ page.slug }}</div>
                    </td>
                    <td class="px-6 py-4 whitespace-nowrap text-center">
                        {% if page.isPublished %}
                            <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full bg-green-100 text-green-800">
                                    Publicada
                                </span>
                        {% else %}
                            <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full bg-gray-600 text-gray-300">
                                    Rascunho
                                </span>
                        {% endif %}
                    </td>
                    <td class="px-6 py-4 whitespace-nowrap text-center">
                        {% if page.showInFooter %}
                            <span class="text-green-500">
                                    <i class="fas fa-check"></i>
                                </span>
                        {% else %}
                            <span class="text-gray-500">
                                    <i class="fas fa-times"></i>
                                </span>
                        {% endif %}
                    </td>
                    <td class="px-6 py-4 whitespace-nowrap">
                        <div class="text-sm text-gray-400">{{ page.updatedAt ? page.updatedAt|date('d/m/Y H:i') : '' }}</div>
                    </td>
                    <td class="px-6 py-4 whitespace-nowrap text-right text-sm font-medium">
                        <div class="flex justify-end space-x-3">
                            <a href="{{ path('app_page_show', {id: page.id}) }}" class="text-blue-400 hover:text-blue-300">
                                <i class="fas fa-eye"></i>
                            </a>
                            <a href="{{ path('app_page_edit', {id: page.id}) }}" class="text-yellow-400 hover:text-yellow-300">
                                <i class="fas fa-edit"></i>
                            </a>
                            <a href="#" class="text-red-400 hover:text-red-300"
                               onclick="if(confirm('Tem certeza que deseja eliminar esta página?')) { document.getElementById('delete-form-{{ page.id }}').submit(); } return false;">
                                <i class="fas fa-trash"></i>
                            </a>
                            <form id="delete-form-{{ page.id }}" action="{{ path('app_page_delete', {id: page.id}) }}" method="post" style="display: none;">
                                <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ page.id) }}">
                            </form>
                        </div>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="6" class="px-6 py-10 text-center">
                        <i class="fas fa-file-alt text-4xl text-gray-600 mb-3"></i>
                        <p class="text-gray-400 mb-4">Nenhuma página encontrada</p>
                        <a href="{{ path('app_page_new') }}" class="bg-blue-600 hover:bg-blue-700 px-4 py-2 rounded-md inline-flex items-center transition">
                            <i class="fas fa-plus mr-2"></i>
                            <span>Adicionar primeira página</span>
                        </a>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>

    <div class="mt-8 bg-gray-800 rounded-lg shadow-lg p-6">
        <h3 class="text-lg font-medium mb-4">Sugestões de Páginas</h3>

        <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
            <div class="bg-gray-700 rounded-lg p-4">
                <h4 class="font-medium mb-2">Sobre Nós</h4>
                <p class="text-sm text-gray-400 mb-3">Informações sobre a Duo Films, história da empresa e equipe.</p>
                <a href="#" class="text-blue-400 hover:text-blue-300 text-sm" onclick="createPage('Sobre Nós', 'sobre-nos'); return false;">
                    Criar página
                </a>
            </div>

            <div class="bg-gray-700 rounded-lg p-4">
                <h4 class="font-medium mb-2">Política de Privacidade</h4>
                <p class="text-sm text-gray-400 mb-3">Informações sobre coleta e uso de dados dos usuários do site.</p>
                <a href="#" class="text-blue-400 hover:text-blue-300 text-sm" onclick="createPage('Política de Privacidade', 'politica-de-privacidade'); return false;">
                    Criar página
                </a>
            </div>

            <div class="bg-gray-700 rounded-lg p-4">
                <h4 class="font-medium mb-2">Termos de Serviço</h4>
                <p class="text-sm text-gray-400 mb-3">Condições de uso dos serviços oferecidos pela Duo Films.</p>
                <a href="#" class="text-blue-400 hover:text-blue-300 text-sm" onclick="createPage('Termos de Serviço', 'termos-de-servico'); return false;">
                    Criar página
                </a>
            </div>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const searchInput = document.getElementById('searchInput');
            const rows = document.querySelectorAll('#pagesTable tr');

            searchInput.addEventListener('keyup', function() {
                const searchTerm = this.value.toLowerCase();

                rows.forEach(row => {
                    const title = row.querySelector('.page-title')?.textContent.toLowerCase() || '';
                    const isVisible = title.includes(searchTerm);

                    row.style.display = isVisible ? '' : 'none';
                });
            });
        });

        function createPage(title, slug) {
            if (confirm(`Deseja criar a página "${title}"?`)) {
                window.location.href = `{{ path('app_page_new') }}?title=${encodeURIComponent(title)}&slug=${encodeURIComponent(slug)}`;
            }
        }
    </script>
{% endblock %}