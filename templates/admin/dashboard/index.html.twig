{% extends 'admin/layout.html.twig' %}

{% block title %}Painel Inicial | DuoFilms{% endblock %}
{% block page_title %}Painel Inicial{% endblock %}

{% block content %}
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6 mb-12">
        <div class="bg-gradient-to-br from-purple-600 to-blue-500 p-6 rounded-lg shadow-lg">
            <div class="flex items-center justify-between">
                <h2 class="text-xl font-semibold">Total de Fotografias</h2>
                <i class="fas fa-image text-2xl opacity-80"></i>
            </div>
            <p class="text-4xl font-bold mt-4">{{ photoCount }}</p>
            <div class="mt-2 text-blue-100">Fotografias no sistema</div>
        </div>

        <div class="bg-gradient-to-br from-amber-500 to-orange-600 p-6 rounded-lg shadow-lg">
            <div class="flex items-center justify-between">
                <h2 class="text-xl font-semibold">Mensagens</h2>
                <i class="fas fa-envelope text-2xl opacity-80"></i>
            </div>
            <p class="text-4xl font-bold mt-4">{{ messageCount }}</p>
            <div class="mt-2 text-orange-100">Contactos recebidos</div>
        </div>

        <div class="bg-gradient-to-br from-emerald-500 to-teal-600 p-6 rounded-lg shadow-lg">
            <div class="flex items-center justify-between">
                <h2 class="text-xl font-semibold">Utilizadores</h2>
                <i class="fas fa-users text-2xl opacity-80"></i>
            </div>
            <p class="text-4xl font-bold mt-4">{{ userCount }}</p>
            <div class="mt-2 text-teal-100">Contas registadas</div>
        </div>
    </div>

    <div class="grid grid-cols-1 lg:grid-cols-2 gap-6">
        <div class="bg-gray-800 rounded-lg shadow-lg p-6">
            <h2 class="text-2xl font-bold mb-4">Actividade Recente</h2>
            <div class="space-y-3">
                <div class="flex items-center p-3 bg-gray-700 rounded hover:bg-gray-600 transition">
                    <div class="w-10 h-10 rounded-full bg-blue-500 flex items-center justify-center mr-4">
                        <i class="fas fa-plus text-white"></i>
                    </div>
                    <div class="flex-1">
                        <p>Nova fotografia adicionada</p>
                        <p class="text-gray-400 text-sm">Há 2 horas</p>
                    </div>
                </div>
                <div class="flex items-center p-3 bg-gray-700 rounded hover:bg-gray-600 transition">
                    <div class="w-10 h-10 rounded-full bg-orange-500 flex items-center justify-center mr-4">
                        <i class="fas fa-envelope text-white"></i>
                    </div>
                    <div class="flex-1">
                        <p>Nova mensagem recebida</p>
                        <p class="text-gray-400 text-sm">Há 4 horas</p>
                    </div>
                </div>
            </div>
        </div>

        <div class="bg-gray-800 rounded-lg shadow-lg p-6">
            <h2 class="text-2xl font-bold mb-4">Tarefas Pendentes</h2>
            <div class="space-y-3">
                <div class="flex items-center p-3 bg-gray-700 rounded hover:bg-gray-600 transition">
                    <input type="checkbox" class="mr-3">
                    <div class="flex-1">
                        <p>Responder a mensagens de contacto</p>
                        <p class="text-gray-400 text-sm">Até amanhã</p>
                    </div>
                </div>
                <div class="flex items-center p-3 bg-gray-700 rounded hover:bg-gray-600 transition">
                    <input type="checkbox" class="mr-3">
                    <div class="flex-1">
                        <p>Atualizar galeria de fotos</p>
                        <p class="text-gray-400 text-sm">Esta semana</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}