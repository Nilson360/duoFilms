{{ form_start(form, {'attr': {'class': 'space-y-6'}}) }}
<div class="grid grid-cols-1 md:grid-cols-2 gap-6">
    <div>
        {{ form_label(form.name, 'Nome da Empresa', {'label_attr': {'class': 'block text-sm font-medium text-gray-300 mb-2'}}) }}
        {{ form_widget(form.name, {'attr': {'class': 'bg-gray-700 border border-gray-600 rounded-md py-2 px-4 w-full focus:outline-none focus:ring-2 focus:ring-blue-500'}}) }}
        {{ form_errors(form.name, {'attr': {'class': 'text-red-500 text-sm mt-1'}}) }}
    </div>

    <div>
        {{ form_label(form.website, 'Website', {'label_attr': {'class': 'block text-sm font-medium text-gray-300 mb-2'}}) }}
        {{ form_widget(form.website, {'attr': {'class': 'bg-gray-700 border border-gray-600 rounded-md py-2 px-4 w-full focus:outline-none focus:ring-2 focus:ring-blue-500', 'placeholder': 'https://exemplo.com'}}) }}
        {{ form_errors(form.website, {'attr': {'class': 'text-red-500 text-sm mt-1'}}) }}
    </div>
</div>

<div>
    {{ form_label(form.logo, 'Logo', {'label_attr': {'class': 'block text-sm font-medium text-gray-300 mb-2'}}) }}

    {% if partner is defined and partner.logo %}
        <div class="mb-3">
            <img src="{{ asset('uploads/partners/' ~ partner.logo) }}" alt="{{ partner.name }}" class="h-16 bg-white p-2 rounded">
            <p class="text-xs text-gray-400 mt-1">Logo atual</p>
        </div>
    {% endif %}

    {{ form_widget(form.logo, {'attr': {'class': 'bg-gray-700 border border-gray-600 rounded-md py-2 px-4 w-full focus:outline-none focus:ring-2 focus:ring-blue-500'}}) }}
    {{ form_errors(form.logo, {'attr': {'class': 'text-red-500 text-sm mt-1'}}) }}
    <p class="text-xs text-gray-400 mt-1">Formatos recomendados: PNG com fundo transparente. Tamanho ideal: 200x100px</p>
</div>

{% if form.description is defined %}
    <div>
        {{ form_label(form.description, 'Descrição', {'label_attr': {'class': 'block text-sm font-medium text-gray-300 mb-2'}}) }}
        {{ form_widget(form.description, {'attr': {'class': 'bg-gray-700 border border-gray-600 rounded-md py-2 px-4 w-full focus:outline-none focus:ring-2 focus:ring-blue-500', 'rows': 3}}) }}
        {{ form_errors(form.description, {'attr': {'class': 'text-red-500 text-sm mt-1'}}) }}
    </div>
{% endif %}

<div class="pt-4">
    <button type="submit" class="bg-blue-600 hover:bg-blue-700 px-6 py-2 rounded-md flex items-center transition">
        <i class="fas fa-save mr-2"></i>
        <span>{{ button_label|default('Salvar') }}</span>
    </button>
</div>
{{ form_end(form) }}