<!DOCTYPE html>
<html lang="pt">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{% block title %}DuoFilms - Painel Administrativo{% endblock %}</title>

    {% block stylesheets %}
        {{ encore_entry_link_tags('app') }}
    {% endblock %}
    <style>
        html {
            scroll-behavior: smooth;
        }
    </style>
    {% block javascripts %}
        {{ encore_entry_script_tags('app') }}
        {% block importmap %}{{ importmap('app') }}{% endblock %}
    {% endblock %}
</head>
<body class="bg-gray-900 text-white min-h-screen flex">
{# Barra lateral #}
<aside class="w-64 bg-gray-800 min-h-screen flex flex-col fixed">
    <div class="p-4 border-b border-gray-700">
        <div class="flex items-center">
            <img src="{{ asset('images/logo.png') }}" alt="DuoFilms" class="h-8 w-auto mr-2">
            <span class="text-xl font-bold">DuoFilms</span>
        </div>
    </div>

    <nav class="flex-1 py-4 px-2">
        <ul class="space-y-1">
            <li>
                <a href="{{ path('admin_dashboard') }}"
                   class="flex items-center px-4 py-2 rounded-md {% if app.request.get('_route') == 'admin_dashboard' %}bg-gray-700{% else %}hover:bg-gray-700{% endif %} transition">
                    <i class="fas fa-home mr-3"></i>
                    <span>Painel Inicial</span>
                </a>
            </li>

            <li class="pt-4 pb-2">
                <div class="px-4 text-xs font-semibold text-gray-400 uppercase tracking-wider">
                    Gestão
                </div>
            </li>

            <li>
                <a href="{{ path('app_page_index') }}"
                   class="flex items-center px-4 py-2 rounded-md {% if app.request.get('_route') starts with 'admin_multimedia' %}bg-gray-700{% else %}hover:bg-gray-700{% endif %} transition">
                    <i class="fas fa-image mr-3"></i>
                    <span>Páginas</span>
                </a>
            </li>
            <li>
                <a href="{{ path('app_social_link_index') }}"
                   class="flex items-center px-4 py-2 rounded-md {% if app.request.get('_route') starts with 'admin_multimedia' %}bg-gray-700{% else %}hover:bg-gray-700{% endif %} transition">
                    <i class="fas fa-image mr-3"></i>
                    <span>Redes Sociais</span>
                </a>
            </li>
            <li>
                <a href="{{ path('app_service_index') }}"
                   class="flex items-center px-4 py-2 rounded-md {% if app.request.get('_route') starts with 'admin_multimedia' %}bg-gray-700{% else %}hover:bg-gray-700{% endif %} transition">
                    <i class="fas fa-image mr-3"></i>
                    <span>Serviços</span>
                </a>
            </li>
            <li>
                <a href="{{ path('admin_multimedia') }}"
                   class="flex items-center px-4 py-2 rounded-md {% if app.request.get('_route') starts with 'admin_multimedia' %}bg-gray-700{% else %}hover:bg-gray-700{% endif %} transition">
                    <i class="fas fa-image mr-3"></i>
                    <span>Multimédia</span>
                </a>
            </li>
            <li>
                <a href="{{ path('app_video_index') }}"
                   class="flex items-center px-4 py-2 rounded-md {% if app.request.get('_route') starts with 'admin_multimedia' %}bg-gray-700{% else %}hover:bg-gray-700{% endif %} transition">
                    <i class="fas fa-image mr-3"></i>
                    <span>Vídeo</span>
                </a>
            </li>

            <li>
                <a href="{{ path('admin_messages') }}"
                   class="flex items-center px-4 py-2 rounded-md {% if app.request.get('_route') starts with 'admin_messages' %}bg-gray-700{% else %}hover:bg-gray-700{% endif %} transition">
                    <i class="fas fa-envelope mr-3"></i>
                    <span>Mensagens</span>
                </a>
            </li>
            <li>
                <a href="{{ path('app_partner_index') }}"
                   class="flex items-center px-4 py-2 rounded-md {% if app.request.get('_route') starts with 'admin_messages' %}bg-gray-700{% else %}hover:bg-gray-700{% endif %} transition">
                    <i class="fas fa-envelope mr-3"></i>
                    <span>Parceiro</span>
                </a>
            </li>
            <li>
                <a href="{{ path('app_testimonial_index') }}"
                   class="flex items-center px-4 py-2 rounded-md {% if app.request.get('_route') starts with 'admin_messages' %}bg-gray-700{% else %}hover:bg-gray-700{% endif %} transition">
                    <i class="fas fa-envelope mr-3"></i>
                    <span>Depoimento</span>
                </a>
            </li>
            <li>
                <a href="{{ path('app_portfolio_admin_index') }}"
                   class="flex items-center px-4 py-2 rounded-md {% if app.request.get('_route') starts with 'admin_messages' %}bg-gray-700{% else %}hover:bg-gray-700{% endif %} transition">
                    <i class="fas fa-envelope mr-3"></i>
                    <span>Portfólio</span>
                </a>
            </li>
            <li>
                <a href="{{ path('app_project_index') }}"
                   class="flex items-center px-4 py-2 rounded-md {% if app.request.get('_route') starts with 'admin_messages' %}bg-gray-700{% else %}hover:bg-gray-700{% endif %} transition">
                    <i class="fas fa-envelope mr-3"></i>
                    <span>Projetos</span>
                </a>
            </li>
            <li>
                <a href="{{ path('app_category_index') }}"
                   class="flex items-center px-4 py-2 rounded-md {% if app.request.get('_route') starts with 'admin_users' %}bg-gray-700{% else %}hover:bg-gray-700{% endif %} transition">
                    <i class="fas fa-users mr-3"></i>
                    <span>Categorias</span>
                </a>
            </li>
            <li>
                <a href="{{ path('admin_users') }}"
                   class="flex items-center px-4 py-2 rounded-md {% if app.request.get('_route') starts with 'admin_users' %}bg-gray-700{% else %}hover:bg-gray-700{% endif %} transition">
                    <i class="fas fa-users mr-3"></i>
                    <span>Utilizadores</span>
                </a>
            </li>
        </ul>
    </nav>

    <div class="p-4 border-t border-gray-700">
        <a href="{{ path('app_logout') }}" class="flex items-center text-red-400 hover:text-red-300">
            <i class="fas fa-sign-out-alt mr-3"></i>
            <span>Sair</span>
        </a>
    </div>
</aside>

{# Conteúdo principal #}
<main class="ml-64 flex-1 p-6">
    <div class="mb-6 flex justify-between items-center">
        <h1 class="text-2xl font-bold">{% block page_title %}Dashboard{% endblock %}</h1>

        <div class="flex items-center">
            <div class="mr-4 text-sm text-gray-400">
                {{ app.user.username ?? 'Usuário' }}
            </div>
            <div class="w-10 h-10 rounded-full bg-gray-700 flex items-center justify-center">
                <i class="fas fa-user"></i>
            </div>
        </div>
    </div>

    {% for label, messages in app.flashes %}
        {% for message in messages %}
            <div class="mb-4 p-4 rounded-md {% if label == 'success' %}bg-green-700{% elseif label == 'error' %}bg-red-700{% else %}bg-blue-700{% endif %}">
                {{ message }}
            </div>
        {% endfor %}
    {% endfor %}

    {% block content %}{% endblock %}
</main>


</body>
</html>