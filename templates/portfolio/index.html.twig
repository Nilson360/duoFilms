    <!-- JavaScript para filtros e interatividade -->
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            // Filtragem de categoria
            const filterButtons = document.querySelectorAll('.filter-btn');
            const portfolioItems = document.querySelectorAll('.portfolio-item');

            // Ativar o botão "Todos" por padrão
            document.querySelector('[data-filter="all"]').classList.add('active');

            filterButtons.forEach(button => {
                button.addEventListener('click', function () {
                    // Remover classe active de todos os botões
                    filterButtons.forEach(btn => {
                        btn.classList.remove('active', 'bg-white', 'text-black');
                        btn.classList.add('border-gray-700');
                    });

                    // Adicionar classe active ao botão clicado
                    this.classList.add('active', 'bg-white', 'text-black');
                    this.classList.remove('border-gray-700');

                    const filter = this.getAttribute('data-filter');

                    // Mostrar ou esconder itens baseado na categoria
                    portfolioItems.forEach(item => {
                        if (filter === 'all' || item.getAttribute('data-category') === filter) {
                            item.style.display = 'block';
                        } else {
                            item.style.display = 'none';
                        }
                    });
                });
            });

            // Botão "Carregar Mais" (simulação)
            const loadMoreButton = document.getElementById('load-more');
            let clickCount = 0;

            if (loadMoreButton) {
                loadMoreButton.addEventListener('click', function () {
                    clickCount++;

                    if (clickCount >= 2) {
                        this.textContent = 'Não há mais projetos';
                        this.disabled = true;
                        this.classList.add('opacity-50', 'cursor-not-allowed');
                    } else {
                        // Aqui você poderia carregar mais projetos via AJAX
                        // Para este exemplo, apenas mostramos uma mensagem
                        const toast = document.createElement('div');
                        toast.className = 'fixed bottom-4 right-4 bg-black text-white px-4 py-2 rounded-lg shadow-lg';
                        toast.textContent = 'Carregando mais projetos...';
                        document.body.appendChild(toast);

                        setTimeout(() => {
                            toast.remove();
                        }, 3000);
                    }
                });
            }
        });
    </script>
