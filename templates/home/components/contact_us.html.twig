{% extends 'base.html.twig' %}

{% block title %}Contato - Duo Films{% endblock %}

{% block body %}
    <!-- Header da página com efeito parallax -->
    <header class="relative bg-[#121212] text-white py-16 overflow-hidden">
        <div class="container mx-auto px-4 text-center relative z-10">
            <h1 class="text-4xl md:text-5xl font-bold mb-6">Entre em Contato</h1>
            <p class="text-xl text-gray-300 max-w-2xl mx-auto">Transforme seus momentos em memórias eternas. Estamos
                prontos para capturar a essência do seu próximo projeto.</p>
        </div>
    </header>

    <!-- Tabs para navegação de seção -->
    <div class="bg-black sticky top-16 z-20 shadow-md">
        <div class="container mx-auto px-4">
            <div class="flex overflow-x-auto py-4 space-x-6 scrollbar-hide">
                <a href="#contact-form"
                   class="text-white font-medium hover:text-gray-300 whitespace-nowrap px-2 py-1 border-b-2 border-white">Formulário
                    de Contato</a>
                <a href="#faq"
                   class="text-gray-400 font-medium hover:text-white whitespace-nowrap px-2 py-1 border-b-2 border-transparent hover:border-white">Perguntas
                    Frequentes</a>
                <a href="#location"
                   class="text-gray-400 font-medium hover:text-white whitespace-nowrap px-2 py-1 border-b-2 border-transparent hover:border-white">Localização</a>
                <a href="#social"
                   class="text-gray-400 font-medium hover:text-white whitespace-nowrap px-2 py-1 border-b-2 border-transparent hover:border-white">Redes
                    Sociais</a>
            </div>
        </div>
    </div>

    <!-- Seção de contato principal -->
    <section id="contact-form" class="py-16 bg-[#121212] text-white">
        <div class="container mx-auto px-4">
            {# Mensagens Flash #}
            {% for label, messages in app.flashes %}
                {% for message in messages %}
                    <div class="mb-8 p-4 rounded-lg {{ label == 'success' ? 'bg-green-800 text-white' : 'bg-red-800 text-white' }} flex items-center">
                        {% if label == 'success' %}
                            <svg class="w-6 h-6 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24"
                                 xmlns="http://www.w3.org/2000/svg">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                      d="M5 13l4 4L19 7"></path>
                            </svg>
                        {% else %}
                            <svg class="w-6 h-6 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24"
                                 xmlns="http://www.w3.org/2000/svg">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                      d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                            </svg>
                        {% endif %}
                        {{ message }}
                    </div>
                {% endfor %}
            {% endfor %}

            <div class="grid grid-cols-1 lg:grid-cols-2 gap-12">
                <!-- Formulário de contato com Symfony Form -->
                <div class="bg-[#121212] p-8 rounded-lg shadow-lg border border-gray-800">
                    <h2 class="text-2xl font-bold mb-6 pb-4 border-b border-gray-800">Envie sua mensagem</h2>
                    {{ form_start(form, {'attr': {'id': 'contactForm', 'class': 'space-y-6'}}) }}

                    <div class="mb-6">
                        {{ form_label(form.fullName, 'Nome Completo', {'label_attr': {'class': 'block text-sm font-medium text-white mb-2'}}) }}
                        {{ form_widget(form.fullName, {'attr': {'class': 'w-full p-2 border border-gray-300 rounded-lg bg-white text-black', 'placeholder': 'Seu nome completo'}}) }}
                        {{ form_errors(form.fullName, {'attr': {'class': 'text-red-400 text-sm mt-1'}}) }}
                    </div>

                    <div class="grid grid-cols-1 md:grid-cols-2 gap-6 mb-6">
                        <div>
                            {{ form_label(form.email, 'Email', {'label_attr': {'class': 'block text-sm font-medium text-white mb-2'}}) }}
                            {{ form_widget(form.email, {'attr': {'class': 'w-full p-2 border border-gray-300 rounded-lg bg-white text-black', 'placeholder': 'seu@email.com'}}) }}
                            {{ form_errors(form.email, {'attr': {'class': 'text-red-400 text-sm mt-1'}}) }}
                        </div>
                        <div>
                            {{ form_label(form.phoneNumber, 'Telefone', {'label_attr': {'class': 'block text-sm font-medium text-white mb-2'}}) }}
                            {{ form_widget(form.phoneNumber, {'attr': {'class': 'w-full p-2 border border-gray-300 rounded-lg bg-white text-black', 'placeholder': '+351 XXX XXX XXX'}}) }}
                            {{ form_errors(form.phoneNumber, {'attr': {'class': 'text-red-400 text-sm mt-1'}}) }}
                        </div>
                    </div>

                    <div class="mb-6">
                        {{ form_label(form.subject, 'Assunto', {'label_attr': {'class': 'block text-sm font-medium text-white mb-2'}}) }}
                        {{ form_widget(form.subject, {'attr': {'class': 'w-full p-2 border border-gray-300 rounded-lg bg-white text-black', 'placeholder': 'Motivo do contato'}}) }}
                        {{ form_errors(form.subject, {'attr': {'class': 'text-red-400 text-sm mt-1'}}) }}
                    </div>

                    <div class="mb-6">
                        {{ form_label(form.content, 'Sua Mensagem', {'label_attr': {'class': 'block text-sm font-medium text-white mb-2'}}) }}
                        {{ form_widget(form.content, {'attr': {'class': 'w-full p-2 border border-gray-300 rounded-lg bg-white text-black resize-none', 'rows': '4', 'placeholder': 'Descreva seu projeto ou dúvida...'}}) }}
                        {{ form_errors(form.content, {'attr': {'class': 'text-red-400 text-sm mt-1'}}) }}
                    </div>

                    <div class="mb-6">
                        <label class="flex items-start">
                            {{ form_widget(form.privacy, {'attr': {'class': 'form-checkbox h-5 w-5 mt-1'}}) }}
                            <span class="ml-2 text-sm text-white">Li e concordo com a <a
                                        href="{{ path('app_footer_content', {slug:'privacy'}) }}"
                                        class="text-white underline hover:text-gray-300">Política de Privacidade</a> da Duo Films, autorizando o tratamento dos meus dados para fins de contato.</span>
                        </label>
                        {{ form_errors(form.privacy, {'attr': {'class': 'text-red-400 text-sm mt-1'}}) }}
                    </div>

                    <button type="submit"
                            class="w-full mt-6 bg-black text-white px-4 py-3 rounded-lg hover:bg-gray-800 border border-white transition-all duration-300 flex items-center justify-center">
                        <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24"
                             xmlns="http://www.w3.org/2000/svg">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                  d="M12 19l9 2-9-18-9 18 9-2zm0 0v-8"></path>
                        </svg>
                        Enviar Mensagem
                    </button>

                    {{ form_end(form) }}
                </div>

                <!-- Informações de contato -->
