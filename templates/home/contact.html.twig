{% extends 'base.html.twig' %}

{% block title %}Contato - Fotografia Profissional{% endblock %}

{% block body %}
    <!-- Header da página -->
    <header class="bg-[#121212] text-white py-24 mt-12">
        <div class="container mx-auto px-4 text-center">
            <h1 class="text-4xl md:text-5xl font-bold mb-4">Entre em Contato</h1>
            <p class="text-xl text-gray-300 max-w-2xl mx-auto">Estamos prontos para capturar seus momentos especiais.
                Envie-nos uma mensagem e vamos conversar sobre seu próximo projeto.</p>
        </div>
    </header>

    <!-- Seção de contato principal -->
    <section id="contact-form" class="py-16 bg-[#121212] text-white">
        <div class="container mx-auto px-4">
            {# Mensagens Flash #}
            {% for label, messages in app.flashes %}
                {% for message in messages %}
                    <div class="mb-8 p-4 rounded-lg {{ label == 'success' ? 'bg-green-800 text-white' : 'bg-red-800 text-white' }}">
                        {{ message }}
                    </div>
                {% endfor %}
            {% endfor %}

            <div class="grid grid-cols-1 lg:grid-cols-2 gap-12">
                <!-- Formulário de contato com Symfony Form -->
                <div class="bg-[#121212] p-8 rounded-lg shadow-lg">
                    {{ form_start(form, {'attr': {'id': 'contactForm', 'class': 'space-y-6'}}) }}

                    <div class="mb-6">
                        {{ form_label(form.fullName, 'Nome Completo', {'label_attr': {'class': 'block text-sm font-medium text-white mb-2'}}) }}
                        {{ form_widget(form.fullName, {'attr': {'class': 'w-full p-2 border border-gray-300 rounded-lg bg-white text-black'}}) }}
                        {{ form_errors(form.fullName, {'attr': {'class': 'text-red-400 text-sm mt-1'}}) }}
                    </div>

                    <div class="grid grid-cols-1 md:grid-cols-2 gap-6 mb-6">
                        <div>
                            {{ form_label(form.email, 'Email', {'label_attr': {'class': 'block text-sm font-medium text-white mb-2'}}) }}
                            {{ form_widget(form.email, {'attr': {'class': 'w-full p-2 border border-gray-300 rounded-lg bg-white text-black'}}) }}
                            {{ form_errors(form.email, {'attr': {'class': 'text-red-400 text-sm mt-1'}}) }}
                        </div>
                        <div>
                            {{ form_label(form.phoneNumber, 'Telefone', {'label_attr': {'class': 'block text-sm font-medium text-white mb-2'}}) }}
                            {{ form_widget(form.phoneNumber, {'attr': {'class': 'w-full p-2 border border-gray-300 rounded-lg bg-white text-black'}}) }}
                            {{ form_errors(form.phoneNumber, {'attr': {'class': 'text-red-400 text-sm mt-1'}}) }}
                        </div>
                    </div>

                    <div class="mb-6">
                        {{ form_label(form.subject, 'Assunto', {'label_attr': {'class': 'block text-sm font-medium text-white mb-2'}}) }}
                        {{ form_widget(form.subject, {'attr': {'class': 'w-full p-2 border border-gray-300 rounded-lg bg-white text-black'}}) }}
                        {{ form_errors(form.subject, {'attr': {'class': 'text-red-400 text-sm mt-1'}}) }}
                    </div>

                    <div class="mb-6">
                        {{ form_label(form.content, 'Sua Mensagem', {'label_attr': {'class': 'block text-sm font-medium text-white mb-2'}}) }}
                        {{ form_widget(form.content, {'attr': {'class': 'w-full p-2 border border-gray-300 rounded-lg bg-white text-black resize-none', 'rows': '4'}}) }}
                        {{ form_errors(form.content, {'attr': {'class': 'text-red-400 text-sm mt-1'}}) }}
                    </div>

                    <div class="mb-6">
                        <label class="flex items-center">
                            {{ form_widget(form.privacy, {'attr': {'class': 'form-checkbox h-5 w-5'}}) }}
                            <span class="ml-2 text-sm text-white">Concordo com a <a
                                        href="{{ path('app_footer_content', {slug:'privacy'}) }}"
                                        class="text-white underline hover:text-gray-300">Política de Privacidade</a></span>
                        </label>
                        {{ form_errors(form.privacy, {'attr': {'class': 'text-red-400 text-sm mt-1'}}) }}
                    </div>

                    <button type="submit"
                            class="mt-6 bg-black text-white px-4 py-2 rounded-lg hover:bg-gray-800 border border-white">
                        Enviar Mensagem
                    </button>

                    {{ form_end(form) }}
                </div>

                <!-- Informações de contato -->
                <div class="flex flex-col justify-between">
                    <div>
                        <h3 class="text-2xl font-bold mb-6">Informações de Contato</h3>

                        <div class="space-y-6">
                            <div class="flex items-start">
                                <div class="flex-shrink-0 bg-black p-3 rounded-lg mr-4 border border-white">
                                    <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor"
                                         viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                              d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"></path>
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                              d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
                                    </svg>
                                </div>
                                <div>
                                    <h4 class="text-lg font-medium mb-1">Localização</h4>
                                    <p class="text-gray-300">Av. da Liberdade, 123<br>Lisboa, Portugal</p>
                                </div>
                            </div>

                            <div class="flex items-start">
                                <div class="flex-shrink-0 bg-black p-3 rounded-lg mr-4 border border-white">
                                    <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor"
                                         viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                              d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
                                    </svg>
                                </div>
                                <div>
                                    <h4 class="text-lg font-medium mb-1">Email</h4>
                                    <a href="mailto:contato@suafoto.com"
                                       class="text-gray-300 hover:text-white transition-colors">contato@suafoto.com</a>
                                </div>
                            </div>

                            <div class="flex items-start">
                                <div class="flex-shrink-0 bg-black p-3 rounded-lg mr-4 border border-white">
                                    <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor"
                                         viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                              d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"></path>
                                    </svg>
                                </div>
                                <div>
                                    <h4 class="text-lg font-medium mb-1">Telefone</h4>
                                    <a href="tel:+351912345678"
                                       class="text-gray-300 hover:text-white transition-colors">+351 912 345 678</a>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Mapa -->
                    <div class="mt-8 md:mt-4 rounded-lg overflow-hidden shadow-lg h-64">
                        <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3113.1869607123456!2d-9.1453456847751!3d38.7179445717576!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0xd19330dd0b4b747%3A0xb8b8f0d3a5b56ce0!2sAv.%20da%20Liberdade%2C%20Lisboa%2C%20Portugal!5e0!3m2!1spt-PT!2spt!4v1588560008167!5m2!1spt-PT!2spt"
                                width="100%" height="100%" style="border:0;" allowfullscreen="" loading="lazy"
                                referrerpolicy="no-referrer-when-downgrade"></iframe>
                    </div>

                    <!-- Redes sociais -->
                    <div class="mt-8">
                        <h4 class="text-lg font-medium mb-4">Siga-nos nas Redes Sociais</h4>
                        <div class="flex space-x-4">
                            <a href="https://facebook.com/" target="_blank"
                               class="bg-black p-3 rounded-full hover:bg-gray-800 transition-colors border border-white">
                                <svg class="w-6 h-6 text-white" fill="currentColor" viewBox="0 0 24 24"
                                     xmlns="http://www.w3.org/2000/svg">
                                    <path d="M22 12c0-5.523-4.477-10-10-10S2 6.477 2 12c0 4.991 3.657 9.128 8.438 9.878v-6.987h-2.54V12h2.54V9.797c0-2.506 1.492-3.89 3.777-3.89 1.094 0 2.238.195 2.238.195v2.46h-1.26c-1.243 0-1.63.771-1.63 1.562V12h2.773l-.443 2.89h-2.33v6.988C18.343 21.128 22 16.991 22 12z"></path>
                                </svg>
                            </a>
                            <a href="https://instagram.com/" target="_blank"
                               class="bg-black p-3 rounded-full hover:bg-gray-800 transition-colors border border-white">
                                <svg class="w-6 h-6 text-white" fill="currentColor" viewBox="0 0 24 24"
                                     xmlns="http://www.w3.org/2000/svg">
